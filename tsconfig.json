{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "module": "commonjs",
    "target": "es6",
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "test/main-test.js",
    "strings/**/*.js",
    ".eslintrc.js",
    ".hooks/**/*.js",
    "<text>"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}
