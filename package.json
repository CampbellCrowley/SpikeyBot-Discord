    "bufferutil": "^4.0.1",
    "dateformat": "^3.0.3",
    "dialogflow": "^1.2.0",
    "diff": "^4.0.2",
    "discord.js": "github:discordjs/discord.js#1e63f3756e814d6b1a2a9c17af9c2b28ce37e472",
    "erlpack": "github:discordapp/erlpack",
    "fuzzy-search": "^3.2.1",
    "http-proxy": "^1.18.1",
    "jimp": "^0.14.0",
    "mathjs": "^7.2.0",
    "mkdirp": "^1.0.4",
    "mysql": "^2.18.1",
    "patreon": "^0.4.1",
    "rimraf": "^3.0.2",
    "socket.io": "^2.3.0",
    "sodium": "^3.0.2",
    "threads": "^0.12.1",
    "utf-8-validate": "^5.0.2",
